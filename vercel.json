{
  "version": 2,
  "name": "smart-community-management",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "regions": ["hkg1", "sin1"],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://api.smartcommunity.com",
    "VITE_APP_TITLE": "智慧社區管理系統",
    "VITE_APP_VERSION": "1.0.0"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/assets/styles/variables.css",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/assets/styles"
      }
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/backstage",
      "permanent": true
    },
    {
      "source": "/dashboard",
      "destination": "/frontstage",
      "permanent": true
    },
    {
      "source": "/api/(.*)",
      "destination": "https://api.smartcommunity.com/$1",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}